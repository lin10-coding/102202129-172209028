<view class="container">
<van-search
  value="{{ value }}"
  placeholder="请输入搜索关键词"
  show-action
  bind:search="onSearch"
  bind:cancel="onCancel"
  style="margin-top: 60px;position:relative;left: 0;margin-right: 60px;width: 70%;"
/>


<view class="sw">
