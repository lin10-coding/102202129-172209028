    autoplay="true" 
    interval="3000" 
    duration="1000"
    style="width: 95%; height: 30%;position: relative;left: 10px;"
    circular="true"
    indicator-dots="true"
    indicator-color="rgba(0, 0, 0, .3)"
    indicator-active-color="#000000"
  >
    <swiper-item>
      <image src="/images/slide1.jpg" class="slide-image" />
